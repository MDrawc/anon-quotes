<div class="col-sm-8">

<%= render 'articles/ancomments' %>
<%= render 'articles/show_comment_errors' %>

  <%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>
    <div class="form-group">
      <%= form.label :commenter %>
      <%= form.text_field :commenter, class: "form-control", placeholder: "Enter name", autofocus: true %>
    </div>

    <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body, class: "form-control", placeholder: "Enter comment" %>
    </div>

      <%= form.submit "Add", class: "btn btn-secondary btn-sm" %>
      <%= link_to "Back", root_path, class: "btn btn-secondary btn-sm" %>

  <% end %>
</div>
